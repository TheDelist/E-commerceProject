@model ProductModel

<h1 class="h3">Edit Product</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="ProductEdit" method="POST">
            <input type="hidden" name="ProductId" value="@Model.ProductId">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                </div>
            </div>
            <div class="form-group row">
                <label  asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label  asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CategoryId">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Quantity">
                </div>
            </div>
            @* <div class="form-group row"> CHECKBOX GÖZÜKMÜYOR
                <label asp-for="IsHome" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="IsHome">
                </div>
            </div> *@
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2 mt-3">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </form>
    </div>
</div>